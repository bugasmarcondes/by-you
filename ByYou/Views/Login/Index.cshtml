@model ByYou.Models.Login

@{
    ViewBag.Title = "Login";
}

<div id="resultado">
    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <h3>Login</h3>

        <div class="clearfix"></div>

        @Html.LabelFor(x => x.Usuario, htmlAttributes: new { @class = "label" })
        @Html.EditorFor(x => x.Usuario, new { htmlAttributes = new { @class = "text" } })
        @Html.ValidationMessageFor(x => x.Usuario, "", new { @class = "text-danger" })

        <div class="clearfix"></div>

        @Html.LabelFor(x => x.Senha, htmlAttributes: new { @class = "label" })
        @Html.EditorFor(x => x.Senha, new { htmlAttributes = new { @class = "text" } })
        @Html.ValidationMessageFor(x => x.Senha, "", new { @class = "text-danger" })

        <div class="validation-summary">
            @Html.ValidationMessage("login")
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        
        <input type="submit" value="Entrar" class="button" />
    }
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
